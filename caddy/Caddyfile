{$DOMAIN}:443 {
  log {
    level INFO
    output file {$LOG_FILE} {
      roll_size 10MB
      roll_keep 10
    }
  }

  # Use the ACME HTTP-01 challenge to get a cert for the configured domain.
  tls {$EMAIL}

  # This setting may have compatibility issues with some browsers
  # (e.g., attachment downloading on Firefox). Try disabling this
  # if you encounter issues.
#   encode gzip

  # Notifications redirected to the WebSocket server
  reverse_proxy /notifications/hub vaultwarden:3012

  # Proxy everything else to Rocket
  reverse_proxy vaultwarden:8989 {
    # Send the true remote IP to Rocket, so that vaultwarden can put this in the
    # log, so that fail2ban can ban the correct IP.
    header_up X-Real-IP {remote_host}
  }

  # Comment out the reverse_proxy directives above and
  # uncomment the redir and handle directives below to use subpath hosting
  # See readme for detailed instructions
  # redir {$DOMAIN_SUBPATH} {$DOMAIN_SUBPATH}/ permanent

  # handle {$DOMAIN_SUBPATH}/* {
  #   # Notifications redirected to the WebSocket server
  #   reverse_proxy /notifications/hub vaultwarden:3012

  #   # Proxy everything else to Rocket
  #   reverse_proxy vaultwarden:8989 {
  #       # Send the true remote IP to Rocket, so that vaultwarden can put this in the
  #       # log, so that fail2ban can ban the correct IP.
  #       header_up X-Real-IP {remote_host}
  #   }
  # }

  # handle {
  #   respond "Access Denied" 403 {
  #     close
  #   }
  # }
}
